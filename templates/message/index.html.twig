{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h2>Messages</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ReceiverUsername</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>AuthorUsername</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.receiverUsername }}</td>
                <td>{{ message.content }}</td>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ message.authorUsername }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('message_new') }}">Create new</a>
{% endblock %}
