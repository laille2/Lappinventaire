{% extends 'base.html.twig' %}

{% block title %}CollectionEntity index{% endblock %}

{% block body %}
    <h1>CollectionEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collection_entity in collection_entities %}
            <tr>
                <td>{{ collection_entity.id }}</td>
                <td>{{ collection_entity.name }}</td>
                <td>
                    <a href="{{ path('collection_entity_show', {'id': collection_entity.id}) }}">show</a>
                    <a href="{{ path('collection_entity_edit', {'id': collection_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('collection_entity_new') }}">Create new</a>
{% endblock %}
